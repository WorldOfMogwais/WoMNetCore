<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <RuntimeIdentifiers>win-x32;win-x64;osx-x64;ubuntu-x64;alpine-x64;rhel-x64;opensuse-x64;gentoo-x64;fedora-x64;debian-x64;centos-x64;linux-x64</RuntimeIdentifiers>
    <ApplicationIcon />
    <StartupObject>WoMSadGui.Program</StartupObject>
    <Version>1.1.1</Version>
    <Authors>Cedric Decoster</Authors>
    <Company>Mogwaicoin</Company>
    <Product>The World of Mogwais</Product>
    <Description>World of Mogwais is a experiment driven by the idea of adding gamification to the blockchain technology. It builds up on the cryptocurrency Mogwai Coin.</Description>
    <Copyright>Mogwaicoin Team 2018</Copyright>
    <PackageLicenseUrl>https://raw.githubusercontent.com/WorldOfMogwais/WoMNetCore/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://www.mogwaicoin.org</PackageProjectUrl>
    <RepositoryUrl>https://github.com/WorldOfMogwais/WoMNetCore</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
